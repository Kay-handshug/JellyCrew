<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.JellyCrew" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <!-- 상태바까지 view를 보여줌 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    // Common ################################################### Start
    // Font
    <style name="font_reqular">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo_regular</item>
    </style>

    <style name="font_medium">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    <style name="font_bold">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

    // Title
    <style name="style_common_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/color_common_text_gray900</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

    // Sub Title
    <style name="style_common_sub_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_common_text_gray900</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

    <style name="style_common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_common_text_gray900</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    // Button
    <style name="style_common_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

    // Label
    <style name="style_common_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    // Line
    <style name="style_common_line1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="style_common_line2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    // CheckBox
    <style name="style_common_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_color_gray_n_black</item>
        <item name="android:buttonTint">@color/color_common_violet500</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    <style name="style_common_checkbox_no_stroke">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_color_gray_n_black</item>
        <item name="android:button">@drawable/selector_checkbox_purple_n_gray</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    // Common ################################################### End

</resources>